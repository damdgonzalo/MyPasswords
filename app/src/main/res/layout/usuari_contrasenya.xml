<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="183dp"
        android:layout_height="202dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/nom_aplicacio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:id="@+id/fons_quadrat"
        android:layout_width="0dp"
        android:layout_height="331dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </LinearLayout>

    <TextView
        android:id="@+id/nom_aplicacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="23dp"
        android:text="Nom aplicaciÃ³"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/switcher_usuaris"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        />

    <ViewSwitcher
        android:id="@+id/switcher_usuaris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="129dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/fons_quadrat"
        app:layout_constraintStart_toStartOf="@+id/fons_quadrat"
        >

        <TextView
            android:id="@+id/usuari_veure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/usuari_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="18sp"/>

    </ViewSwitcher>

    <ViewSwitcher
        android:id="@+id/switcher_contrasenyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/switcher_usuaris"
        app:layout_constraintTop_toBottomOf="@+id/switcher_usuaris"
        >

        <TextView
            android:id="@+id/contrasenya_veure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/contrasenya_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword|textVisiblePassword"
            android:text="Name"
            android:textSize="18sp"/>

    </ViewSwitcher>

</android.support.constraint.ConstraintLayout>
